<% content_for :title do %>
  <%= @question.title %>
<% end %>

<% content_for :back do %>
  <%= link_to "Back", user_questions_path(current_user.id) %>
<%end%>


<div class="card question-details">
  <span id="item1mobile" class="control-content active">
    <% if @question.headshot_photos.present? %>
    <%= image_tag(
      headshot_custom_image_url(@question.headshot_photos.first.image_file_name),
      size: "200x200"
      )
    %>
    <% else %>
    <img class="media-object pull-left" src="http://baconmockup.com/100/100/">
    <% end %>

  </span>
  <div class="media-body">
    <p>
      <ul class="table-view">
        <li class="table-view-cell">
          <h1>
            <%=@question.title%>
            <p>
              <%=l @question.created_at, format: :short%>
            </p>
          </h1>
          <span class="icon icon-star-filled"></span>4
          <p>
            <%= @question.content %>
          </p>
        </li>
      </ul>
    </p>
    <hr />
  </div>
</div>

New Answer

<%= form_for [:nurses, @question, @answer] do |f| %>
  <%= f.text_area :content, placeholder: "Detailed Answer", class: "form-control", size: "10x3" %>
  <%= f.submit "Save Answer", class: "btn btn-primary btn-block" %>
<% end %>
