<h1>New Question</h1>
<hr>
<%= form_for [current_user, @question] do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title", class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :content, placeholder: "Content", class: "form-control" %>
  </div>
  <%= f.submit "Save Question", class: "btn btn-primary btn-block" %>
<% end %>
<br>
